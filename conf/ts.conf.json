{
  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs"
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!typings/**",
    "!node_modules/**"
  ]
}
